<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.delaroystudios.alarmreminder.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gasto de Combustible"
        android:textSize="30sp"
        android:textAlignment="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Distancia Recorrida"
            android:textSize="18dp" />
        <EditText
            android:layout_marginTop="10dp"

            android:id="@+id/EtxtKm"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />


        <TextView
            android:layout_marginTop="10dp"

            android:id="@+id/textView7"
            android:layout_width="64dp"
            android:layout_height="39dp"
            android:text="KM"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="75dp"
            android:layout_alignTop="@+id/EtxtKm"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="50dp"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Distancia Acumulada"
            android:textSize="18dp"/>
        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/acumuladorkm"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="               "
            android:textSize="20dp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="64dp"
            android:layout_height="39dp"
            android:text="KM"
            android:layout_marginLeft="30dp"
            android:textSize="30dp"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/textView6"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:textSize="18dp"
            android:text="Gasolina consumida" />

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/Consum_gas"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="             "
            android:textSize="20dp" />



    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Aceptado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Aceptar"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp" />
        <Button
            android:layout_marginLeft="40dp"
            android:id="@+id/config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIGURACION"
            android:textSize="20dp"
            android:layout_marginTop="50dp" />
    </LinearLayout>
</LinearLayout>


